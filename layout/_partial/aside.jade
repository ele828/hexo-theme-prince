aside.sidebar.col-md-4.col-xs-12
  .aboutme.widget
    h3.aside-title ABOUT ME
    p.about-me-text= theme.description


  .all-tags.widget
    h3.aside-title ALL TAGS
    .all-tags-box!= list_tags({show_count:false,style:null,separator:''})

  .follow-me.widget
    h3.aside-title FOLLOW ME
    .follow-icons
      a.github-link(href=theme.github target='_blank')
      a.weibo-link(href=theme.weibo target='_blank')
      a.linkedin-link(href=theme.linkedin target='_blank')

